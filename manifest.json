{
	"name": "SN Helper",
	"description": "Makes application and update set picker dropdown wider on San Diego release.",
	"version": "1.0",
	"manifest_version": 3,
	"icons": {
		"128": "sn_helper_icon.png",
		"48": "sn_helper_icon_small.png"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"_sn_type": "San Diego",
			"matches": [
				"*://*.service-now.com/now/*"
			],
			"exclude_matches": [
				"*://*/*?XML*",
				"*://*/*&XML*",
				"*://*/*?WSDL*",
				"*://*/*&WSDL*"
			],
			"js": [
				"newContent.js"
			],
			"run_at": "document_end",
			"all_frames": true
		},
		{
			"_sn_type": "Pre San Diego",
			"matches": [
				"*://*.service-now.com/*"
			],
			"exclude_matches": [
				"*://*/*?XML*",
				"*://*/*&XML*",
				"*://*/*?WSDL*",
				"*://*/*&WSDL*",
				"*://*.service-now.com/now/*",
				"*://*.danfoss.net/now/*"
			],
			"js": [
				"oldContent.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]
}